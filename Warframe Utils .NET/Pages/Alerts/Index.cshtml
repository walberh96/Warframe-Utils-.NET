@page
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Price Alerts";
    var user = await UserManager.GetUserAsync(User);
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">Price Alerts</h1>
            <p class="text-muted">Monitor Warframe item prices and get notified when they drop below your target price.</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#createAlertModal">
                <i class="fas fa-plus"></i> New Alert
            </button>
        </div>
    </div>

    @if (!User.Identity?.IsAuthenticated ?? true)
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">Login Required</h4>
            <p>Please <a href="/Identity/Account/Login" class="alert-link">log in</a> to create and manage price alerts.</p>
        </div>
    }
    else
    {
        <!-- Notifications Section -->
        <div id="notificationsContainer" class="mb-4">
            <!-- Notifications will be loaded here -->
        </div>

        <!-- Active Alerts Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-bell"></i> Active Alerts
                    <span class="badge bg-primary" id="activeAlertsCount">0</span>
                </h5>
            </div>
            <div class="card-body">
                <div id="alertsContainer" class="row g-3">
                    <!-- Alerts will be loaded here -->
                </div>
            </div>
        </div>

        <!-- Triggered Alerts Section -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-star"></i> Triggered Alerts
                    <span class="badge bg-warning" id="triggeredAlertsCount">0</span>
                </h5>
            </div>
            <div class="card-body">
                <div id="triggeredAlertsContainer" class="row g-3">
                    <!-- Triggered alerts will be loaded here -->
                </div>
            </div>
        </div>
    }
</div>

<!-- Create Alert Modal -->
<div class="modal fade" id="createAlertModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Price Alert</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createAlertForm">
                    <div class="mb-3">
                        <label for="itemName" class="form-label">Item Name *</label>
                        <input type="text" class="form-control" id="itemName" name="itemName" placeholder="e.g., Serration, Excalibur Prime" required>
                        <small class="form-text text-muted">Search for the exact item name from Warframe Market</small>
                    </div>
                    <div class="mb-3">
                        <label for="alertPrice" class="form-label">Alert Price (Platinum) *</label>
                        <input type="number" class="form-control" id="alertPrice" name="alertPrice" placeholder="100" min="0" step="1" required>
                        <small class="form-text text-muted">You'll be notified when the price drops to this amount or lower</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="createAlert()">Create Alert</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Alert Modal -->
<div class="modal fade" id="editAlertModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Price Alert</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editAlertForm">
                    <input type="hidden" id="editAlertId">
                    <div class="mb-3">
                        <label for="editItemName" class="form-label">Item Name</label>
                        <input type="text" class="form-control" id="editItemName" name="itemName">
                    </div>
                    <div class="mb-3">
                        <label for="editAlertPrice" class="form-label">Alert Price (Platinum)</label>
                        <input type="number" class="form-control" id="editAlertPrice" name="alertPrice" min="0" step="1">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="editIsActive" name="isActive">
                        <label class="form-check-label" for="editIsActive">Active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateAlert()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load alerts when page loads
        document.addEventListener('DOMContentLoaded', function () {
            loadAlerts();
            loadNotifications();
            
            // Refresh every 30 seconds
            setInterval(loadAlerts, 30000);
            setInterval(loadNotifications, 30000);
        });

        async function loadAlerts() {
            try {
                const response = await fetch('/api/alert');
                if (!response.ok) throw new Error('Failed to load alerts');
                
                const alerts = await response.json();
                displayAlerts(alerts);
            } catch (error) {
                console.error('Error loading alerts:', error);
                showError('Failed to load alerts');
            }
        }

        async function loadNotifications() {
            try {
                const response = await fetch('/api/alert/notifications/unread');
                if (!response.ok) throw new Error('Failed to load notifications');
                
                const notifications = await response.json();
                displayNotifications(notifications);
            } catch (error) {
                console.error('Error loading notifications:', error);
            }
        }

        function displayAlerts(alerts) {
            const activeContainer = document.getElementById('alertsContainer');
            const triggeredContainer = document.getElementById('triggeredAlertsContainer');
            let activeCount = 0;
            let triggeredCount = 0;

            activeContainer.innerHTML = '';
            triggeredContainer.innerHTML = '';

            alerts.forEach(alert => {
                const alertHtml = createAlertCard(alert);
                if (alert.isTriggered) {
                    triggeredContainer.innerHTML += alertHtml;
                    triggeredCount++;
                } else {
                    activeContainer.innerHTML += alertHtml;
                    activeCount++;
                }
            });

            document.getElementById('activeAlertsCount').textContent = activeCount;
            document.getElementById('triggeredAlertsCount').textContent = triggeredCount;

            if (activeCount === 0) {
                activeContainer.innerHTML = '<div class="col-12"><p class="text-muted">No active alerts yet. Create one to get started!</p></div>';
            }
            if (triggeredCount === 0) {
                triggeredContainer.innerHTML = '<div class="col-12"><p class="text-muted">No triggered alerts.</p></div>';
            }
        }

        function displayNotifications(notifications) {
            const container = document.getElementById('notificationsContainer');
            container.innerHTML = '';

            notifications.forEach(notification => {
                const notificationHtml = `
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <h4 class="alert-heading"><i class="fas fa-check-circle"></i> Alert Triggered!</h4>
                        <p><strong>${notification.itemName}</strong> price is now ${notification.triggeredPrice} platinum (target: ${notification.message})</p>
                        <button type="button" class="btn-close" onclick="markNotificationAsRead(${notification.id})"></button>
                    </div>
                `;
                container.innerHTML += notificationHtml;
            });
        }

        function createAlertCard(alert) {
            const statusBadge = alert.isTriggered 
                ? '<span class="badge bg-success">Triggered</span>'
                : (alert.isActive ? '<span class="badge bg-primary">Active</span>' : '<span class="badge bg-secondary">Inactive</span>');
            
            const currentPrice = alert.currentPrice 
                ? `${alert.currentPrice} platinum`
                : 'Checking...';

            return `
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="card-title">${alert.itemName}</h6>
                            <div class="mb-2">
                                <small class="text-muted">Current Price:</small>
                                <p class="card-text"><strong>${currentPrice}</strong></p>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Alert Price:</small>
                                <p class="card-text"><strong>${alert.alertPrice} platinum</strong></p>
                            </div>
                            <div class="mb-3">
                                ${statusBadge}
                                ${alert.lastCheckedAt ? `<small class="text-muted d-block mt-2">Last checked: ${new Date(alert.lastCheckedAt).toLocaleString()}</small>` : ''}
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <button class="btn btn-sm btn-outline-primary" onclick="editAlertModal(${alert.id}, '${alert.itemName}', ${alert.alertPrice}, ${alert.isActive})">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteAlert(${alert.id})">
                                <i class="fas fa-trash"></i>
                            </button>
                            ${alert.isTriggered && !alert.isAcknowledged ? `
                                <button class="btn btn-sm btn-outline-success" onclick="acknowledgeAlert(${alert.id})">
                                    <i class="fas fa-check"></i> Acknowledge
                                </button>
                            ` : ''}
                        </div>
                    </div>
                </div>
            `;
        }

        async function createAlert() {
            const itemName = document.getElementById('itemName').value;
            const alertPrice = parseFloat(document.getElementById('alertPrice').value);

            if (!itemName || isNaN(alertPrice)) {
                showError('Please fill in all fields');
                return;
            }

            try {
                const response = await fetch('/api/alert', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        itemName: itemName,
                        alertPrice: alertPrice
                    })
                });

                if (!response.ok) throw new Error('Failed to create alert');

                // Reset form and close modal
                document.getElementById('createAlertForm').reset();
                const modal = bootstrap.Modal.getInstance(document.getElementById('createAlertModal'));
                modal.hide();

                showSuccess('Alert created successfully!');
                loadAlerts();
            } catch (error) {
                console.error('Error creating alert:', error);
                showError('Failed to create alert');
            }
        }

        function editAlertModal(id, itemName, alertPrice, isActive) {
            document.getElementById('editAlertId').value = id;
            document.getElementById('editItemName').value = itemName;
            document.getElementById('editAlertPrice').value = alertPrice;
            document.getElementById('editIsActive').checked = isActive;
            const modal = new bootstrap.Modal(document.getElementById('editAlertModal'));
            modal.show();
        }

        async function updateAlert() {
            const id = document.getElementById('editAlertId').value;
            const itemName = document.getElementById('editItemName').value;
            const alertPrice = parseFloat(document.getElementById('editAlertPrice').value);
            const isActive = document.getElementById('editIsActive').checked;

            try {
                const response = await fetch(`/api/alert/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        itemName: itemName,
                        alertPrice: alertPrice,
                        isActive: isActive
                    })
                });

                if (!response.ok) throw new Error('Failed to update alert');

                const modal = bootstrap.Modal.getInstance(document.getElementById('editAlertModal'));
                modal.hide();

                showSuccess('Alert updated successfully!');
                loadAlerts();
            } catch (error) {
                console.error('Error updating alert:', error);
                showError('Failed to update alert');
            }
        }

        async function deleteAlert(id) {
            if (!confirm('Are you sure you want to delete this alert?')) return;

            try {
                const response = await fetch(`/api/alert/${id}`, { method: 'DELETE' });
                if (!response.ok) throw new Error('Failed to delete alert');

                showSuccess('Alert deleted successfully!');
                loadAlerts();
            } catch (error) {
                console.error('Error deleting alert:', error);
                showError('Failed to delete alert');
            }
        }

        async function acknowledgeAlert(id) {
            try {
                const response = await fetch(`/api/alert/${id}/acknowledge`, { method: 'POST' });
                if (!response.ok) throw new Error('Failed to acknowledge alert');

                loadAlerts();
            } catch (error) {
                console.error('Error acknowledging alert:', error);
                showError('Failed to acknowledge alert');
            }
        }

        async function markNotificationAsRead(notificationId) {
            try {
                const response = await fetch(`/api/alert/notifications/${notificationId}/read`, { method: 'POST' });
                if (!response.ok) throw new Error('Failed to mark notification as read');

                loadNotifications();
            } catch (error) {
                console.error('Error marking notification as read:', error);
            }
        }

        function showSuccess(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-success alert-dismissible fade show';
            alert.innerHTML = `${message} <button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;
            document.querySelector('.container').prepend(alert);
            setTimeout(() => alert.remove(), 5000);
        }

        function showError(message) {
            const alert = document.createElement('div');
            alert.className = 'alert alert-danger alert-dismissible fade show';
            alert.innerHTML = `${message} <button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;
            document.querySelector('.container').prepend(alert);
            setTimeout(() => alert.remove(), 5000);
        }
    </script>
}
