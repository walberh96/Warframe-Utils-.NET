<form id="searchForm" class="d-flex mb-4 position-relative" role="search" autocomplete="off">
    <input id="searchBox" name="modName" class="form-control me-2" type="search" placeholder="Search Mods" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
    <ul id="suggestions" class="list-group position-absolute mt-5 w-100" style="z-index: 1000;"></ul>
</form>


@if (Model.ModFound != null && Model.ModDetail?.Payload?.Item?.ItemsInSet?.Count > 0)
{
    //"icon": "items/images/en/energy_nexus.c58c98ff3e9a65ea7419e4915e5681a6.png"
    <div class="card mb-4" style="width: 100%; max-height: 200px;">
        <div class="row g-0 h-100">
            <div class="col-auto d-flex align-items-center ps-2">
                <img src="@($"https://warframe.market/static/assets/{@Model.ModDetail.Payload.Item.ItemsInSet[0].Icon}")"
                     class="img-fluid rounded"
                     style="object-fit: contain; width: 180px; height: 180px; background-color: #f8f9fa;">
            </div>
            <div class="col">
                <div class="card-body d-flex flex-column h-100">
                    <div>
                        <h5 class="card-title">💣 @Model.ModFound.ItemName</h5>
                        <h5 class="card-title">💣 @Model.ModDetail.Payload.Item.ItemsInSet.FirstOrDefault()?.En?.Description</h5>
                        <p class="card-text">💸 Trading Tax: @Model.ModDetail.Payload.Item.ItemsInSet[0].TradingTax</p>
                        
                    </div>
                    <div class="mt-auto">
                        <a href="https://wiki.warframe.com/w/@Uri.EscapeDataString(Model.ModFound.ItemName)" target="_blank" class="me-2">📚 Warframe Wiki</a>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <button class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#alertModal" onclick="prepareAlertModal('@Model.ModFound.ItemName')">
                                <i class="fas fa-bell"></i> <span id="alertButtonText">Place Alert</span>
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Username</th>
            <th>Status</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Rank</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Orders?.Orders != null && Model.Orders.Orders.Any())
        {
            @foreach (var order in Model.Orders.Orders
           .Where(o => o.Type == "sell" && o.User?.Status == "ingame" && o.Visible).OrderBy(m => m.Platinum).OrderBy(m=>m.Rank))
            {
                <tr>
                    <td class="d-flex justify-content-between align-items-center">
                        <span>@order.User.InGameName</span>
                        <button class="btn btn-sm btn-outline-primary" onclick="copyUsername('@order.User.InGameName')">Copy</button>
                    </td>
                    <td>
                        @{
                            var status = order.User.Status ?? "offline";
                            var badgeClass = status == "ingame" ? "bg-success" :
                            status == "offline" ? "bg-secondary" :
                            "bg-warning text-dark";
                        }
                        <span class="badge @badgeClass">
                            @status.First().ToString().ToUpper()@status.Substring(1)
                        </span>
                    </td>
                    <td>@order.Platinum</td>
                    <td>@order.Quantity</td>
                    <td>@order.Rank</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No orders found for this mod.</td>
            </tr>
        }
    </tbody>
</table><script>
    function copyUsername(username) {
        const textToCopy = `/w ${username}`;
        navigator.clipboard.writeText(textToCopy).catch(err => {
            console.error('Error copying text: ', err);
        });
    }
</script>

<script>
    const mods = @Html.Raw(JsonSerializer.Serialize(Model.Mods.Payload.Mods.Select(m => m.ItemName)));
    const input = document.getElementById('searchBox');
    const suggestions = document.getElementById('suggestions');
    const form = document.getElementById('searchForm');

    let filtered = [];
    let activeIndex = -1;

    function renderSuggestions() {
        suggestions.innerHTML = '';
        filtered.forEach((mod, index) => {
            const li = document.createElement('li');
            li.textContent = mod;
            li.className = 'list-group-item list-group-item-action';
            if (index === activeIndex) li.classList.add('active');
            li.onclick = () => {
                input.value = mod;
                suggestions.innerHTML = '';
                form.requestSubmit(); // envía el formulario
            };
            suggestions.appendChild(li);
        });
    }

    input.addEventListener('input', function () {
        const query = this.value.toLowerCase();
        activeIndex = -1;
        suggestions.innerHTML = '';
        if (query.length === 0) return;

        filtered = mods.filter(m => m.toLowerCase().includes(query)).slice(0, 8);
        renderSuggestions();
    });

    input.addEventListener('keydown', function (e) {
        if (filtered.length === 0) return;

        if (e.key === 'ArrowDown') {
            e.preventDefault();
            activeIndex = (activeIndex + 1) % filtered.length;
            renderSuggestions();
        } else if (e.key === 'ArrowUp') {
            e.preventDefault();
            activeIndex = (activeIndex - 1 + filtered.length) % filtered.length;
            renderSuggestions();
        } else if (e.key === 'Enter') {
            if (activeIndex >= 0 && filtered[activeIndex]) {
                e.preventDefault();
                input.value = filtered[activeIndex];
                suggestions.innerHTML = '';
                form.requestSubmit();
            }
        }
    });

    document.addEventListener('click', function (e) {
        if (!suggestions.contains(e.target) && e.target !== input) {
            suggestions.innerHTML = '';
        }
    });

    form.addEventListener('submit', function (e) {
        const currentValue = input.value.trim().toLowerCase();

        if (!mods.some(m => m.toLowerCase() === currentValue) && filtered.length > 0) {
            input.value = filtered[0];
        }

        const finalValue = input.value.trim().toLowerCase();
        if (!mods.some(m => m.toLowerCase() === finalValue)) {
            e.preventDefault();
            input.focus();
        }
    });
</script>

<!-- Alert Modal -->
<div class="modal fade" id="alertModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="alertModalTitle">Place Alert</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3"><strong>Item:</strong> <span id="alertItemName"></span></p>
                <form id="alertForm">
                    <input type="hidden" id="alertItemNameInput">
                    <div class="mb-3">
                        <label for="alertPrice" class="form-label">Alert Price (Platinum) *</label>
                        <input type="number" class="form-control" id="alertPrice" name="alertPrice" placeholder="100" min="0" step="1" required>
                        <small class="form-text text-muted">You'll be notified when the price drops to this amount or lower</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger me-auto d-none" id="removeAlertBtn" onclick="removeAlert()">
                    <i class="fas fa-trash"></i> Remove Alert
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="submitAlertBtn" onclick="submitAlert()">Create Alert</button>
            </div>
        </div>
    </div>
</div>

<script>
    let currentAlertId = null;

    async function prepareAlertModal(itemName) {
        document.getElementById('alertItemName').textContent = itemName;
        document.getElementById('alertItemNameInput').value = itemName;
        document.getElementById('alertPrice').value = '';
        currentAlertId = null;

        // Check if alert already exists for this item
        try {
            const response = await fetch('/api/alert');
            if (response.ok) {
                const alerts = await response.json();
                const existingAlert = alerts.find(a => a.itemName.toLowerCase() === itemName.toLowerCase());
                
                if (existingAlert) {
                    // Alert exists - show Modify mode
                    currentAlertId = existingAlert.id;
                    document.getElementById('alertModalTitle').textContent = 'Modify Alert';
                    document.getElementById('alertPrice').value = existingAlert.alertPrice;
                    document.getElementById('submitAlertBtn').textContent = 'Update Alert';
                    document.getElementById('removeAlertBtn').classList.remove('d-none');
                    document.getElementById('alertButtonText').textContent = 'Modify Alert';
                } else {
                    // No alert exists - show Create mode
                    document.getElementById('alertModalTitle').textContent = 'Place Alert';
                    document.getElementById('submitAlertBtn').textContent = 'Create Alert';
                    document.getElementById('removeAlertBtn').classList.add('d-none');
                    document.getElementById('alertButtonText').textContent = 'Place Alert';
                }
            }
        } catch (error) {
            console.error('Error checking for existing alert:', error);
        }
    }

    async function submitAlert() {
        const itemName = document.getElementById('alertItemNameInput').value;
        const alertPrice = parseFloat(document.getElementById('alertPrice').value);

        if (!itemName || isNaN(alertPrice)) {
            alert('Please fill in all fields');
            return;
        }

        try {
            let response;
            if (currentAlertId) {
                // Update existing alert
                response = await fetch(`/api/alert/${currentAlertId}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        itemName: itemName,
                        alertPrice: alertPrice,
                        isActive: true
                    })
                });
            } else {
                // Create new alert
                response = await fetch('/api/alert', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        itemName: itemName,
                        alertPrice: alertPrice
                    })
                });
            }

            if (!response.ok) throw new Error('Failed to save alert');

            // If creating new alert, get the alert ID from response and update button
            if (!currentAlertId) {
                const data = await response.json();
                currentAlertId = data.id;
                document.getElementById('alertButtonText').textContent = 'Modify Alert';
            }

            // Close modal and show success
            const modal = bootstrap.Modal.getInstance(document.getElementById('alertModal'));
            modal.hide();
            
            const successMsg = currentAlertId ? 'Alert updated successfully!' : 'Alert created successfully!';
            showSuccess(successMsg);
        } catch (error) {
            console.error('Error saving alert:', error);
            alert('Failed to save alert');
        }
    }

    async function removeAlert() {
        if (!currentAlertId || !confirm('Are you sure you want to remove this alert?')) return;

        try {
            const response = await fetch(`/api/alert/${currentAlertId}`, { method: 'DELETE' });
            if (!response.ok) throw new Error('Failed to delete alert');

            const modal = bootstrap.Modal.getInstance(document.getElementById('alertModal'));
            modal.hide();
            
            showSuccess('Alert removed successfully!');
            document.getElementById('alertButtonText').textContent = 'Place Alert';
        } catch (error) {
            console.error('Error deleting alert:', error);
            alert('Failed to delete alert');
        }
    }

    function showSuccess(message) {
        const alert = document.createElement('div');
        alert.className = 'alert alert-success alert-dismissible fade show';
        alert.innerHTML = `${message} <button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;
        document.querySelector('.container').prepend(alert);
        setTimeout(() => alert.remove(), 5000);
    }
</script>
