@using Warframe_Utils_.NET.Models.ViewModels
@model WarframeStatus
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center mb-4">
    <h1 class="display-4">Warframe Utils .NET</h1>
</div>
<div class="container-fluid p-3 mb-4 bg-light rounded-3 shadow-sm">
    <div class="row justify-content-between align-items-center">
        <!-- Plains of Eidolon -->
        <div class="col-auto text-center">
            <strong>Plains of Eidolon</strong><br>
            ☀️➡️🌙 <span class="text-muted">00:08:26</span>
        </div>

        <!-- Orb Vallis -->
        <div class="col-auto text-center">
            <strong>Orb Vallis</strong><br>
            ❄️➡️🔥 <span class="text-muted">00:15:38</span>
        </div>

        <!-- Cambion Drift -->
        <div class="col-auto text-center">
            <strong>Cambion Drift</strong><br>
            😡➡️🕊️ <span class="text-muted">00:08:26</span>
        </div>
        
        <!-- Arbitration Status -->
        <div class="col-auto text-center">
            <span class="me-2">👽</span><strong>Arbitration</strong><br>
            <span class="text-muted">💰 Survival on Ceres</span>
        </div>

        <!-- Baroo Status -->
        <div class="col-auto text-center">
            <span class="me-2">👽</span><strong>Baroo</strong><br>
            <span class="text-muted">⚡ Active</span>
        </div>
    </div>
</div>




<form class="d-flex mb-4" role="search">
    <input class="form-control me-2" type="search" placeholder="Search Mods" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>

<div class="card mb-4" style="width: 100%; max-height: 200px;">
    <div class="row g-0 h-100">
        <div class="col-auto d-flex align-items-center ps-2">
            <img src="https://picsum.photos/200/200" class="img-fluid rounded" alt="Random Image" style="object-fit: cover; width: 180px; height: 180px;">
        </div>
        <div class="col">
            <div class="card-body d-flex flex-column h-100">
                <div>
                    <h5 class="card-title">💣 Mod Name</h5>
                    <p class="card-text">🔎 A more detailed description of the mod, with effects, stats, and rarities.</p>
                    <p class="card-text">💸 Trading Tax.</p> 
                </div>
                <div class="mt-auto">
                    <a href="https://wiki.warframe.com/" target="_blank">📚 Warframe Wiki</a>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Username</th>
            <th>Status</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Rank</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="d-flex justify-content-between align-items-center">
                <span>SpaceNinja</span>
                <button class="btn btn-sm btn-outline-primary" onclick="copyUsername('SpaceNinja')">Copy</button>
            </td>
            <td><span class="badge bg-success">In Game</span></td>
            <td>150</td>
            <td>2</td>
            <td>8</td>
        </tr>
        <tr>
            <td class="d-flex justify-content-between align-items-center">
                <span>VoidHunter</span>
                <button class="btn btn-sm btn-outline-primary" onclick="copyUsername('VoidHunter')">Copy</button>
            </td>
            <td><span class="badge bg-secondary">Offline</span></td>
            <td>200</td>
            <td>1</td>
            <td>9</td>
        </tr>
        <tr>
            <td class="d-flex justify-content-between align-items-center">
                <span>LotusWarrior</span>
                <button class="btn btn-sm btn-outline-primary" onclick="copyUsername('LotusWarrior')">Copy</button>
            </td>
            <td><span class="badge bg-warning text-dark">Online</span></td>
            <td>120</td>
            <td>5</td>
            <td>6</td>
        </tr>
    </tbody>
</table>

<script>
    function copyUsername(username) {
        const textToCopy = `/w ${username}`;
        navigator.clipboard.writeText(textToCopy).catch(err => {
            console.error('Error copying text: ', err);
        });
    }
</script>




